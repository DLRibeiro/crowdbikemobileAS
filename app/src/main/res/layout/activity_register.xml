<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.ufpe.cin.contexto.crowdbikemobile.RegisterActivity"
    android:weightSum="1"
    android:background="@color/branco"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:outlineProvider="none">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_logo"
        android:background="@drawable/logo1"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/loginRegisterField"
        android:singleLine="false"
        android:hint="Username"
        android:gravity="center"
        android:layout_below="@+id/emailRegister"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordRegisterField"
        android:hint="Password"
        android:gravity="center"
        android:layout_below="@+id/loginRegisterField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Register"
        android:id="@+id/register_button"
        android:background="#56ff90"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/passwordRegisterField"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/emailRegister"
        android:singleLine="false"
        android:hint="Email"
        android:gravity="center"
        android:layout_below="@+id/login_logo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/RepeatPasswordRegister"
        android:hint="Repeat Password"
        android:gravity="center"
        android:layout_below="@+id/passwordRegisterField"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />


</RelativeLayout>